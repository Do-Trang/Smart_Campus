<!DOCTYPE html>
<html>
    <head>
        <style>
            body {
                font-family: Arial, sans-serif;
            }
    
             h2, h3 {
                color: #333;
            }
    
            table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 20px;
            }
    
            th, td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }
    
            th {
                background-color: #f2f2f2;
            }
    
            tbody tr:hover {
                background-color: #f5f5f5;
            }
        </style>
    </head>
<body>
    <h1>curriculum</h1>
    <%- include('./partials/search.ejs')  %>

    <table style="width: 100%">
        <tr>
            <th>courseID</th>
            <th>status</th>
            <th>content</th>
            <th>textDescription</th>
            <th>orderDate</th>
            <th>priceEach</th>
            <th>Download</th>
        </tr>
        <% for(let i = 0; i < data.length; i++) {%>
            <tr>
                <td> <%= data[i].courseID %> </td>
                <td> <%= data[i].status %> </td>
                <td> <%= data[i].content %> </td>
                <td> <%= data[i].textDescription %> </td>
                <td> <%= data[i].orderDate.toLocaleDateString('el-GR') %> </td>
                <td> <%= data[i].priceEach %> </td>
                <td> <i class="fa-solid fa-file-arrow-down"></i> </td>
            </tr>
        <% } %>
    </table>
</body>
</html>