    <h2>Add course</h2>
    <form action="/addCourse" method="post">
        <label for="courseIDToAdd">Course ID:</label>
        <input type="text" id="courseIDToAdd" name="courseIDToAdd" required>

        <label for="courseNameToAdd">Course Name:</label>
        <input type="text" id="courseNameToAdd" name="courseNameToAdd" required>

        <label for="creditsToAdd">Credits:</label>
        <input type="text" id="creditsToAdd" name="creditsToAdd" required>

        <label for="practiceToAdd">Practice:</label>
        <input type="text" id="practiceToAdd" name="practiceToAdd" required>

        <label for="theoryToAdd">Theory:</label>
        <input type="text" id="theoryToAdd" name="theoryToAdd" required>

        <button type="submit">Add Course</button>
    </form>

    <!-- Delete course form -->
    <h2>Delete Course</h2>
    <form action="/deleteCourse" method="post">
        <label for="courseIDToDelete">Course ID to Delete:</label>
        <input type="text" id="courseIDToDelete" name="courseIDToDelete" required>

        <button type="submit">Delete Course</button>
    </form>

    <!-- Update course form -->
    <h2>Update Course</h2>
    <form action="/updateCourse" method="post">
        <label for="courseIDToUpdate">Course ID to Update:</label>
        <input type="text" id="courseIDToUpdate" name="courseIDToUpdate" required>

        <!-- Other fields for update -->

        <button type="submit">Update Course</button>
    </form>

</body>

