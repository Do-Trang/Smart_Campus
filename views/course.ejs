<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

         h2, h3 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>

<body>

    <h1>Course Management</h1>

    <!-- Display all data -->
    <h2>All data</h2>
    <table>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Credits</th>
            <th>Practice</th>
            <th>Theory</th>
        </tr>
        <% for (let i = 0; i < data.length; i++) { %>
        <tr>
            <td><%= data[i].courseID %></td>
            <td><%= data[i].courseName %></td>
            <td><%= data[i].credits %></td>
            <td><%= data[i].practice %></td>
            <td><%= data[i].theory %></td>
        </tr>
        <% } %>
    </table>

