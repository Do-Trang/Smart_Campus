<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>data</title>
</head>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

         h2, h3 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tbody tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>

<body>

    <h1>Course Management</h1>

    <!-- Display all data, delete button at the end -->
    <h2>Course List</h2>
    <table>
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Course Name</th>
                <th>Credits</th>
                <th>Practice</th>
                <th>Theory</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(course) { %>
            <tr>
                <td><%= course.courseID %></td>
                <td><%= course.courseName %></td>
                <td><%= course.credits %></td>
                <td><%= course.practice %></td>
                <td><%= course.theory %></td>
                <td>
                    <!-- get id them call backend, using method overide -->
                    <form action="/course/deleteCourse/<%= course.courseID %>?_method=DELETE" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
                <!-- update button when click then show alert can rewrite courseName, credits, practice, theory and using method override -->
                <td>
                    <form action="/course/updateCourse/<%= course.courseID %>?_method=PUT" method="post">
                        <label for="courseName">Course Name:</label>
                        <input type="text" id="courseName" name="courseName" required>

                        <label for="credits">Credits:</label>
                        <input type="text" id="credits" name="credits" required>

                        <label for="practice">Practice:</label>
                        <input type="text" id="practice" name="practice" required>

                        <label for="theory">Theory:</label>
                        <input type="text" id="theory" name="theory" required>

                        <button type="submit">Update</button>
                    </form>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <h2>Add course</h2>
    <!-- add course method post -->
    <form action="/course/addCourse" method="post">
        <label for="courseID">Course ID:</label>
        <input type="text" id="courseID" name="courseID" required>

        <label for="courseName">Course Name:</label>
        <input type="text" id="courseName" name="courseName" required>

        <label for="credits">Credits:</label>
        <input type="text" id="credits" name="credits" required>

        <label for="practice">Practice:</label>
        <input type="text" id="practice" name="practice" required>

        <label for="theory">Theory:</label>
        <input type="text" id="theory" name="theory" required>

        <button type="submit">Add Course</button>
    </form>

</body>

</html>